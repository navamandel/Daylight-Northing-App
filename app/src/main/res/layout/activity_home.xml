<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your existing home content -->
    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the Following Values:"
            android:textSize="24sp"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_daylight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daylight/Darkness Calculator" />

        <Button
            android:id="@+id/btn_converter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Converter" />

        <Button
            android:id="@+id/btn_northing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Northing System" />

        <Button
            android:id="@+id/btn_northingstarmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azimuth Calculator" />



    </LinearLayout>

    <!-- Compose overlay that blocks until valid -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/requiredInputsCompose"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
